<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TextView-->
    <style name="WirLogoText">
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textSize">@dimen/textsize_main_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
    </style>

    <style name="Username">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/textsize_main_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_24dp</item>
        <item name="android:textColor">@color/primaryAccentColor</item>
    </style>

    <style name="ProductPhraseText">
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textSize">@dimen/textsize_main_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_24dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ProfileUserInfoLabel">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textSize">@dimen/textsize_main_small</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ProfileUserInfoGoalsText">
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginTop">@dimen/margin_24dp</item>
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="LoginScreenSmallText">
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--EditText-->
    <style name="CustomEditText">
        <item name="android:layout_width">@dimen/width_250</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/secondaryAccentColor</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>

    <style name="ProfileUserInfoLabel.Value">

        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/primaryAccentColor</item>
        <item name="android:textColorHint">@color/primaryAccentColor</item>
        <item name="android:hint">@string/not_added</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileUserInfoGoalsText.Value">
        <item name="android:textColor">@color/primaryAccentColor</item>
        <item name="android:textColorHint">@color/primaryAccentColor</item>
        <item name="android:hint">@string/not_added</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>